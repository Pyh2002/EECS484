import java.io.FileWriter;
import java.io.IOException;
import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.TreeSet;
import java.util.Vector;

import org.json.JSONObject;
import org.json.JSONArray;

public class GetData {

    static String prefix = "project3.";

    // You must use the following variable as the JDBC connection
    Connection oracleConnection = null;

    // You must refer to the following variables for the corresponding 
    // tables in your database
    String userTableName = null;
    String friendsTableName = null;
    String cityTableName = null;
    String currentCityTableName = null;
    String hometownCityTableName = null;

    // DO NOT modify this constructor
    public GetData(String u, Connection c) {
        super();
        String dataType = u;
        oracleConnection = c;
        userTableName = prefix + dataType + "_USERS";
        friendsTableName = prefix + dataType + "_FRIENDS";
        cityTableName = prefix + dataType + "_CITIES";
        currentCityTableName = prefix + dataType + "_USER_CURRENT_CITIES";
        hometownCityTableName = prefix + dataType + "_USER_HOMETOWN_CITIES";
    }

    // TODO: Implement this function
    @SuppressWarnings("unchecked")
    public JSONArray toJSON() throws SQLException {

        // This is the data structure to store all users' information
        JSONArray users_info = new JSONArray();
        
        try (Statement stmt = oracleConnection.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE, ResultSet.CONCUR_READ_ONLY)) {
            // Your implementation goes here....
            ResultSet users = stmt.executeQuery(
                "SELECT USER_ID, FIRST_NAME, LAST_NAME, GENDER, YEAR_OF_BIRTH, MONTH_OF_BIRTH, DAY_OF_BIRTH " +
                "FROM " + userTableName);
            while(users.next()){
                JSONObject userObj = new JSONObject();
                int userId = users.getInt(1);
                userObj.put("user_id", userId);
                userObj.put("first_name", users.getString(2));
                userObj.put("last_name", users.getString(3));
                userObj.put("gender", users.getString(4));
                userObj.put("YOB", users.getInt(5));
                userObj.put("MOB", users.getInt(6));
                userObj.put("DOB", users.getInt(7));
                
                JSONArray friendsArray = new JSONArray();
                try (Statement friendstmt = oracleConnection.createStatement()){
                    ResultSet friendsrst = friendstmt.executeQuery(
                        "SELECT user2_id AS user_id " +
                        "FROM " + friendsTableName + " " +
                        "WHERE user1_id = " + userId + " AND user2_id > " + userId);
                    while(friendsrst.next()){
                        friendsArray.put(friendsrst.getInt(1));
                    }
                    friendsrst.close();
                }
                userObj.put("friends", friendsArray);

                JSONObject hometownCityObj = new JSONObject();
                try (Statement hometownstmt = oracleConnection.createStatement()){
                    ResultSet hometown = hometownstmt.executeQuery(
                        "SELECT C.CITY_NAME, C.STATE_NAME, C.COUNTRY_NAME " + 
                        "FROM " + cityTableName + " C " +
                        "JOIN " + hometownCityTableName + " H ON C.CITY_ID = H.HOMETOWN_CITY_ID " +
                        "WHERE H.USER_ID = " + userId);
                    while(hometown.next()){
                        hometownCityObj.put("city", hometown.getString(1));
                        hometownCityObj.put("state", hometown.getString(2));
                        hometownCityObj.put("country", hometown.getString(3));
                    }
                    hometown.close();
                }
                userObj.put("hometown", hometownCityObj);

                JSONObject currentCityObj = new JSONObject();
                try (Statement currentstmt = oracleConnection.createStatement()){
                    ResultSet current = currentstmt.executeQuery(
                        "SELECT C.CITY_NAME, C.STATE_NAME, C.COUNTRY_NAME " + 
                        "FROM " + cityTableName + " C " +
                        "JOIN " + currentCityTableName + " H ON C.CITY_ID = H.CURRENT_CITY_ID " +
                        "WHERE H.USER_ID = " + userId);
                    while(current.next()){
                        currentCityObj.put("city", current.getString(1));
                        currentCityObj.put("state", current.getString(2));
                        currentCityObj.put("country", current.getString(3));
                    }
                    current.close();
                }
                userObj.put("current", currentCityObj);

                users_info.put(userObj);
            }
            users.close();
            stmt.close();
        } catch (SQLException e) {
            System.err.println(e.getMessage());
        }

        return users_info;
    }

    // This outputs to a file "output.json"
    // DO NOT MODIFY this function
    public void writeJSON(JSONArray users_info) {
        try {
            FileWriter file = new FileWriter(System.getProperty("user.dir") + "/output.json");
            file.write(users_info.toString());
            file.flush();
            file.close();

        } catch (IOException e) {
            e.printStackTrace();
        }

    }
}
